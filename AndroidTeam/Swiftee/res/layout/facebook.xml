<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/background"
	android:gravity="center_horizontal">

	<com.api.facebook.FBLoginButton 
		android:id="@+id/login"  
		android:layout_width="120dip"
		android:layout_height="40dip" 
		android:layout_margin="30dp"
		/>

	<TextView android:id="@+id/label" 
		android:textColor="#000000"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="30dp"
		/>

	<Button android:id="@+id/permissionButton" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/get_permission"
		android:visibility="invisible"
		android:paddingRight="30dp" 
		android:paddingLeft="30dp"
		android:layout_margin="30dp" 
		/>	

	<ProgressBar android:id="@+id/pbar" android:layout_width="wrap_content" 
		android:layout_height="wrap_content" android:visibility="invisible"></ProgressBar>
		
	<Button android:id="@+id/feedButton" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		
		android:visibility="invisible"
		android:paddingRight="30dp" 
		android:paddingLeft="30dp"
		android:layout_margin="30dp" 
		android:background="@drawable/button_publishphoto"
		/>

</LinearLayout>
